<% @post.attachments.each do |attachment| %>
  <p id=<%= attachment.id %>>
    <%= image_tag(attachment_path(attachment.id, thumb: true)) %>
    <%= link_to t(:delete, scope: :post),
      post_attachment_path(post_id: @post.id, id: attachment),
      remote: true,
      method: :delete,
      data: {confirm: t(:warning_question_del, scope: :attachment)},
      class: "btn btn-link" %>
  </p>
<% end %>
