<%= devise_error_messages! %>
<h2><%= t('devise.account.edit') %></h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <div><%= f.label t('devise.auth.email') %><br />
  <%= f.email_field :email %></div>

  <p><%= f.label t('devise.account.name') %><br />
  <%= f.text_field :name %></p>

  <div><%= f.label t('devise.auth.password') %> <i>(<%= t('devise.account.hints.no_change_password') %>)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label t('devise.account.password_confirmation') %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label t('devise.account.password_current') %> <i>(<%= t('devise.account.hints.need_password') %>)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit t('devise.account.update_account') %></div>
<% end %>
<div class="well">
  <%= link_to t('devise.account.delete_account'), registration_path(resource_name), :data => { :confirm => t('devise.account.delete_account_confirm') }, :method => :delete, :class => "btn btn-danger" %>
  <i>(<%= t('devise.account.hints.cancel_account') %>)</i>
</div>
<p><%= link_to t('devise.navigation.back'), :back %></p>
