<form class="navbar-form" role="search">
  <div class="input-group add-on">
    <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
    <div class="input-group-btn">
      <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
</form>
<%= form_tag(posts_path, :method => "get", remote: true, id: "search-form", class: "navbar-form") do %>
  <div class="input-group add-on">
    <%= text_field_tag :search, params[:search], placeholder: "Search for posts..", class: "form-control" %>
    <div class="input-group-btn">
      <%= submit_tag "Go!", :name => nil, class: "btn btn-default" %>
      <i class="glyphicon glyphicon-search"></i>
    </div>
  </div>


<% end %>

