<%= form_tag(posts_path, :method => "get", remote: true, id: "search-form", class: "navbar-form") do %>
  <div class="input-group add-on">
    <%= text_field_tag :search, params[:search], placeholder: "Search for posts..", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <i class="glyphicon glyphicon-search"></i>
      <% end %>
    </div>
  </div>
<% end %>

<h1>Новостная лента</h1>
<!-- TODO: add Bootstrap alerts -->
<div id="alert_placeholder"></div>
<p>Users list:</p>
<% @users.each do |user| %>
  <p>User: <%= link_to user.name, user_path(user) %></p>
<% end %>
<p>Posts:</p>

  <div id="posts-list">
    <%= render :partial => "posts/index" %>
  </div>
  <%= pages_links(Post.all.size, @posts.count, "http://localhost:3000") %>

