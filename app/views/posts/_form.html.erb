<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
      </button>
      <div id="post-alert" class="alert fade in"></div>
      <h4 class="modal-title"><%= t(:post_content, scope: :post) %></h4>
    </div>
    <%= form_for @post, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label t(:title, scope: :post), class:"control-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t(:content, scope: :post), class: "control-label" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t(:attachments, scope: :post), class: "control-label" %>
          <div id="attachments-list">
            <% unless @post.attachments.nil? %>
              <%= render 'attachments/attachments_list' %>
            <% end %>
          </div>
          <%= f.file_field :attachments, class: "form-control", multiple: "multiple" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t(:save, scope: :post), class: "btn btn-primary", id: "button-post-save" %>
        <%= link_to t(:cancel, scope: :post), "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
