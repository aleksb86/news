<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @post, remote: true, html: { style: "display:inline;" } do |f| %>
      <% unless @post.id.nil? %>
        <%= f.hidden_field :id %>
      <% end %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :title, class:"control-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :attachments, class: "control-label" %>
          <%= f.file_field :attachments, class: "form-control", multiple: "multiple" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-primary", id: "button-post-save" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
