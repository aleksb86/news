<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title" id="exampleModalLabel">Edit post</h4>
    </div>
    <%= form_for @post, remote: true, html: { style: "display:inline;", id: "edit-post" } do |f| %>
      <%= f.hidden_field :id %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :title, class:"control-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :attachments, class: "control-label" %>
          <div id="attachments-list" class="form-group">
            <%= render "attachments/attachments_list" %>
          </div>
          <%= f.file_field :attachments, class: "form-control", multiple: "multiple" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
