  <div class="modal-dialog">
    <div class="modal-content">

      <% if @posts.any? %>

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Found posts:</h4>
        </div>
        <div class="modal-body">
          <div class="row">

            <% @posts.each do |post| %>

          	<div class="col-md-4">
            	<div class="panel panel-default">
                <div class="panel-heading">
                  <%= link_to post.title, post %>
                </div>
                <div class="panel-body" style="max-height: 5;">
                  <div class="cut-text">
                    <%= sanitize post.content[0..300] %> ...
                  </div>
                </div>
              </div>
          	</div>

            <% end %>

          </div>
          <div class="modal-footer">
            Всего найдено: <%= @posts.count %>
          </div>
        </div>

      <% else %>

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Nothing found =(</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h4>There are no posts containing the term: <%= "'#{params[:search]}'" %>.</h4>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %>

  </div>
</div>
